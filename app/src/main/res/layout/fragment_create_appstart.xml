<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="40dp">

    <TextView
        android:id="@+id/tvTitleCreateAnApp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_create_an_app"
        android:padding="8dp"
        style="@style/App.Title"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:maxLines="2"
        android:id="@+id/tvParagraphCreateAnApp"
        android:layout_marginTop="12dp"
        android:text="@string/paragraph_create_app"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleCreateAnApp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCreateApp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:itemCount="4"
        tools:listitem="@layout/ite_button_createappstart"
        app:layout_constraintTop_toBottomOf="@+id/tvParagraphCreateAnApp" />

</androidx.constraintlayout.widget.ConstraintLayout>