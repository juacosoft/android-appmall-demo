<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This is the background color of the button -->
    <solid android:color="@color/monoLightgrey" />
    <!-- This is the border color of the button -->
    <stroke
        android:width="1dp"
        android:color="@color/monoLightgrey" />
    <!-- This is the corner radius of the button -->
    <corners android:radius="8dp" />
    <!-- This is the padding of the button -->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />
</shape>